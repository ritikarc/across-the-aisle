{
  "manifest_version": 2,
  "name": "Across the Aisle",
  "author": "Microsoft Hackathon 2019",
  "description": "News source bias information extension. Created for Microsoft Hackathon 2019.",
  "version": "1.0",
  "icons": {
    "25": "images/ata128.png",
    "48": "images/ata128.png"
  },
  "permissions": [
    "*://docs.microsoft.com/*",
    "tabs",
    "notifications",
    "activeTab",
    "storage",
    "contextMenus",
    "background"
  ], 
  "browser_action": {
    "default_icon": {
      "20": "images/ata128.png",
      "40": "images/ata128.png"
    },
    "default_title": "Across the Aisle",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
        "<all_urls>"
    ],
    "js": ["js/jquery-3.4.1.min.js", "js/content.js"],
    "run_at": "document_end"
}],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}
